mixin navbar(links)
     nav.navbar.navbar-default.navbar-static-top.navbar-expand-md
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') Drink it
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav
                    li.nav-item(class=(title == 'Home') ? 'active' : null)
                        a.nav-link(href='/') Home
                    li.nav-item(class=(title == 'About') ? 'active' : null)
                        a.nav-link(href='/about') About
                ul.nav.navbar-nav.navbar-right.ml-auto
                    if user
                        li.dropdown
                            a.navbar-avatar.dropdown-toggle(href='#', data-toggle='dropdown')
                                span #{user.name || user.email} &nbsp;
                                i.caret
                            ul.dropdown-menu
                                li
                                    a(href='/profile') Profile
                                li.divider(role='separator')
                                li
                                    a(href='/logout') Logout
                    else
                        li.nav-item(class=(title == 'Log in') ? 'active' : null)
                            a.nav-link(href='/login') Log-in
                        li.nav-item(class=(title == 'Register') ? 'active' : null)
                            a.nav-link(href='/register') Register

